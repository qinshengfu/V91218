<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Coin_trading_recMapper">

    <!--表名 -->
    <sql id="tableName">
		"FT_COIN_TRADING_REC"
	</sql>

    <!-- 字段 -->
    <sql id="Field">
		"GMT_CREATE",	
		"GMT_MODIFIED",	
		"USDT_AMOUNT",	
		"MY_USER_ID",	
		"MY_USER_NAME",	
		"AMOUNT_TYPE",	
		"TAG",	
		"STATE",	
		"XMC_PRICE",	
		"HIS_USER_ID",	
		"HIS_USER_NAME",	
		"CHARGE",
		"COIN_TRADING_REC_ID"
	</sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
			#{GMT_CREATE},	
			#{GMT_MODIFIED},	
			#{USDT_AMOUNT},	
			#{MY_USER_ID},	
			#{MY_USER_NAME},	
			#{AMOUNT_TYPE},	
			#{TAG},	
			#{STATE},	
			#{XMC_PRICE},	
			#{HIS_USER_ID},	
			#{HIS_USER_NAME},	
			#{CHARGE},
			#{COIN_TRADING_REC_ID}
	</sql>

    <!-- 新增-->
    <insert id="save" parameterType="pd">
        insert into
        <include refid="tableName"></include>
        (
        <include refid="Field"></include>
        ) values (
        <include refid="FieldValue"></include>
        )
    </insert>

    <!-- 删除-->
    <delete id="delete" parameterType="pd">
        delete from
        <include refid="tableName"></include>
        where
        "COIN_TRADING_REC_ID" = #{COIN_TRADING_REC_ID}
    </delete>

    <!-- 修改 -->
    <update id="edit" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        <foreach item="item" collection="_parameter.keys"
                 separator="," close="">
            <if test="item != null and item != '' ">
                ${item} = #{[${item}]}
            </if>
        </foreach>
        where
        "COIN_TRADING_REC_ID" = #{COIN_TRADING_REC_ID}
    </update>

    <!-- 通过ID获取数据 -->
    <select id="findById" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where
        "COIN_TRADING_REC_ID" = #{COIN_TRADING_REC_ID}
    </select>

    <!-- 列表 -->
    <select id="datalistPage" parameterType="page" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where 1=1
        <if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
            and
            (
            <!--	根据需求自己加检索条件
                字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
                 or
                字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            -->
            )
        </if>
    </select>

    <!-- 列表(全部) -->
    <select id="listAll" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
    </select>

    <!-- 列表(不是我发布且未完成的) -->
    <select id="listByState" parameterType="pd" resultType="pd">
        select
        <include refid="Field"/>
        from
        <include refid="tableName"/>
        where
        "MY_USER_ID" != #{ACCOUNT_ID}
        AND
        "STATE" != '已完成'
        and
        "STATE" != '已取消'
        order by "GMT_CREATE" desc
    </select>

    <!-- 列表(我交易的订单) -->
    <select id="listByMyTrade" parameterType="pd" resultType="pd">
        select
        <include refid="Field"/>
        from
        <include refid="tableName"/>
        WHERE
        "MY_USER_ID" = #{ACCOUNT_ID}
        AND "AMOUNT_TYPE" != '掛買'
        AND "AMOUNT_TYPE" != '掛賣'
        OR "HIS_USER_ID" = #{ACCOUNT_ID}
        AND "AMOUNT_TYPE" != '掛買'
        AND "AMOUNT_TYPE" != '掛賣'
        ORDER BY
        "GMT_CREATE" DESC
    </select>

    <!-- 列表(我发布的订单) -->
    <select id="listByMySale" parameterType="pd" resultType="pd">
        select
        <include refid="Field"/>
        from
        <include refid="tableName"/>
        where
        "MY_USER_ID" = #{ACCOUNT_ID}
        and
        "AMOUNT_TYPE" = '掛買'
        and "STATE" != '已取消'
        or
        "MY_USER_ID" = #{ACCOUNT_ID}
        and
        "AMOUNT_TYPE" = '掛賣'
        and "STATE" != '已取消'
        order by "GMT_CREATE" desc
    </select>

    <!-- 批量删除 -->
    <delete id="deleteAll" parameterType="String">
        delete from
        <include refid="tableName"></include>
        where
        "COIN_TRADING_REC_ID" in
        <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- fh313596790qq(青苔) -->
</mapper>